<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mobile.br.com.reclameonibus.TelaLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e6f0f4"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="right">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:id="@+id/tEmailLogin"
        android:layout_marginBottom="7dp"
        android:background="@drawable/screen_border_tela_cadastro"
        android:layout_marginTop="100dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:id="@+id/tSenhaLogin"
        android:layout_marginBottom="7dp"
        android:background="@drawable/screen_border_tela_cadastro"
        android:inputType="numberPassword" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci a senha"
        android:id="@+id/box_Gps"
        android:textStyle="bold"
        android:clickable="true"
        android:enabled="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="200dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:id="@+id/btLogin"
        android:text="Entrar"
        android:background="@drawable/screen_border"
        android:clickable="true"
        android:focusable="false"
        android:enabled="true"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:nestedScrollingEnabled="false"
        android:textStyle="bold" />


</LinearLayout>
